{
    "microservices": [
        {
            "name": "strapi-config-mcr-service",
            "stack": "spring-boot",
            "healthCheckPath": "/actuator/health",
            "dbms": "postgresql",
            "ingressPath": "/entando-strapi-config-api/api/",
            "commands": {
                "run": "mvn -Dspring-boot.run.arguments=\"--server.port=8081\" spring-boot:run"
            },
            "roles": [
                "et-first-role",
                "et-second-role"
            ]
        },
        {
            "name": "strapi-template-bundle",
            "stack": "spring-boot",
            "healthCheckPath": "/actuator/health",
            "dbms": "none",
            "ingressPath": "/entando-template-api/api",
            "commands": {
                "run": "mvn -Dspring-boot.run.arguments=\"--server.port=8081\" spring-boot:run"
            },
            "roles": [
                "et-first-role",
                "et-second-role"
            ]
        }
    ],
    "microfrontends": [
        {
            "name": "config-ui-mcr-frontend",
            "customElement": "et-strapi-config-app",
            "stack": "react",
            "type": "app-builder",
            "group": "free",
            "nav": [
                {
                    "label": {
                        "en": "strapi config microservices",
                        "it": "microservizi di configurazione di strapi"
                    },
                    "target": "internal",
                    "url": "/strapi-mcr-bundle"
                }
            ],
            "slot": "content",
            "paths": [
                "/strapi-mcr-bundle"
            ],
            "apiClaims": [
                {
                    "name": "int-api",
                    "type": "internal",
                    "serviceName": "strapi-config-mcr-service"
                }
            ]
        },
        {
            "name": "et-strapi-template-widget",
            "customElement": "et-strapi-template-app",
            "stack": "react",
            "type": "app-builder",
            "group": "free",
            "nav": [
                {
                    "label": {
                        "en": "strapi content temp",
                        "it": "modello di contenuto strapi"
                    },
                    "target": "internal",
                    "url": "/strapi-bundle"
                }
            ],
            "slot": "content",
            "paths": [
                "/strapi-bundle"
            ],
            "apiClaims": [
                {
                    "name": "int-api",
                    "type": "internal",
                    "serviceName": "strapi-template-bundle"
                },
                {
                    "name": "ext-api",
                    "type": "external",
                    "serviceName": "strapi-config-mcr-service",
                    "bundle": "registry.hub.docker.com/<org-name>/entando-strapi-widgets-oci"
                }
            ]
        },
        {
            "name": "strapi-widget-app",
            "customElement": "strapi-widget-app(this app renders on publish page after configuring the strapi-widget-config-app)",
            "stack": "react",
            "type": "widget",
            "group": "free",
            "titles": {
                "en": "strapi widget app",
                "it": "strapi widget app"
            },
            "commands": {
                "run": "npm install && PORT=3002 npm start"
            },
            "apiClaims": [
                {
                    "name": "ext-api",
                    "type": "external",
                    "serviceName": "strapi-config-mcr-service",
                    "bundle": "registry.hub.docker.com/<org-name>/entando-strapi-widgets-oci"
                },
                {
                    "name": "ext-api-template",
                    "type": "external",
                    "serviceName": "strapi-template-bundle",
                    "bundle": "registry.hub.docker.com/<org-name>/entando-strapi-widgets-oci"
                }
            ],
            "configMfe":"et-widget-config"
        },
        {
            "name": "et-widget-config",
            "customElement": "single-content-widget-config",
            "stack": "react",
            "type": "widget-config",
            "group": "free",
            "commands": {
                "run": "npm install && PORT=3001 npm start"
            },
            "apiClaims": [
                {
                    "name": "ext-api",
                    "type": "external",
                    "serviceName": "strapi-config-mcr-service",
                    "bundle": "registry.hub.docker.com/<org-name>/entando-strapi-widgets-oci"
                },
                {
                    "name": "ext-api-template",
                    "type": "external",
                    "serviceName": "strapi-template-bundle",
                    "bundle": "registry.hub.docker.com/<org-name>/entando-strapi-widgets-oci"
                }
            ]
        }
    ],
    "svc": ["keycloak"],
    "name": "entando-strapi-widgets-oci",
    "version": "0.0.1",
    "description": "entando-strapi-widgets-oci includes strapi-content-app, strapi-content-list-app, strapi-content-template-app, strapi-content-config-app",
    "type": "bundle"
}