{
    "microservices": [
        {
            "name": "strapi-content-template-ms",
            "stack": "spring-boot",
            "healthCheckPath": "/actuator/health",
            "dbms": "none",
            "ingressPath": "/entando-template-api/api",
            "commands": {
                "run": "mvn -Dspring-boot.run.arguments=\"--server.port=8081\" spring-boot:run"
            },
            "roles": [
                "et-first-role",
                "et-second-role"
            ]
        }
    ],
    "microfrontends": [
        {
            "name": "strapi-content-template-app",
            "customElement": "strapi-content-template-app",
            "stack": "react",
            "type": "app-builder",
            "group": "free",
            "nav": [
                {
                    "label": {
                        "en": "Strapi content template app",
                        "it": "App modello di contenuto strapi"
                    },
                    "target": "internal",
                    "url": "/strapi-content-template"
                }
            ],
            "slot": "content",
            "paths": [
                "/strapi-content-template"
            ],
            "apiClaims": [
                {
                    "name": "int-api",
                    "type": "internal",
                    "serviceName": "strapi-content-template-ms"
                },
                {
                    "name": "ext-api",
                    "type": "external",
                    "serviceName": "strapi-config-mcr-service",
                    "bundle": "registry.hub.docker.com/<org-name>/entando-strapi-widgets-oci"
                }
            ]
        },
        {
            "name": "et-widget",
            "customElement": "my-single-widget",
            "stack": "react",
            "type": "widget",
            "group": "free",
            "titles": {
                "en": "SW-en MFE",
                "it": "SW-it MFE"
            },
            "commands": {
                "run": "npm install && PORT=3002 npm start"
            },
            "apiClaims": [
                {
                    "name": "ext-api",
                    "type": "external",
                    "serviceName": "strapi-config-mcr-service",
                    "bundle": "registry.hub.docker.com/<org-name>/entando-strapi-widgets-oci"
                },
                {
                    "name": "ext-api-template",
                    "type": "external",
                    "serviceName": "strapi-content-template-ms",
                    "bundle": "registry.hub.docker.com/<org-name>/entando-strapi-widgets-oci"
                }
            ],
            "configMfe":"et-widget-config"
        },
        {
            "name": "et-widget-config",
            "customElement": "single-content-widget-config",
            "stack": "react",
            "type": "widget-config",
            "group": "free",
            "commands": {
                "run": "npm install && PORT=3001 npm start"
            },
            "apiClaims": [
                {
                    "name": "ext-api",
                    "type": "external",
                    "serviceName": "strapi-config-mcr-service",
                    "bundle": "registry.hub.docker.com/<org-name>/entando-strapi-widgets-oci"
                },
                {
                    "name": "ext-api-template",
                    "type": "external",
                    "serviceName": "strapi-content-template-ms",
                    "bundle": "registry.hub.docker.com/<org-name>/entando-strapi-widgets-oci"
                }
            ]
        }
    ],
    "svc": ["keycloak"],
    "name": "entando-strapi-widgets-oci",
    "version": "0.0.1",
    "description": "entando-strapi-widgets-oci includes strapi-content-app, strapi-content-list-app, strapi-content-template-app, strapi-content-config-app",
    "type": "bundle"
}